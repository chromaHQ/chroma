{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client", "@types/chrome"],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@chroma/*": ["packages/*/src"]
    }
  }
}
