#!/usr/bin/env sh

# Load pnpm and node paths for GUI apps (VS Code, etc.)
export PATH="$HOME/Library/pnpm:$HOME/.nvm/versions/node/v22.18.0/bin:/opt/homebrew/bin:/usr/local/bin:$PATH"

# Skip commitlint for automated release commits
if grep -q "chore: release packages" "$1"; then
  exit 0
fi

npx --no -- commitlint --edit "$1"
