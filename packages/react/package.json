  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^12.1.3",
    "@types/react": "^18.2.7",
    "rollup": "^4.8.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "typescript": "^5.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
